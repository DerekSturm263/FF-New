enum Direction
{
	Neutral,
	Horizontal,
	Up,
	Down
}

[Serializable]
struct DirectionalEmote
{
	asset_ref<Emote> Neutral;
	asset_ref<Emote> Horizontal;
	asset_ref<Emote> Up;
	asset_ref<Emote> Down;
}

[Serializable]
struct DirectionalAnimationRef
{
	AnimationRef Neutral;
	AnimationRef Horizontal;
	AnimationRef Up;
	AnimationRef Down;
}
