enum ParentType
{
    None,
    User,
    MainWeapon,
    SubWeapon
}

[Serializable]
struct HitboxSettings
{
    ParentType Parent;
    FPVector2 Offset;
    FP Radius;
    FP Damage;
    FPVector2 Knockback;
    uint UserFreezeDuration;
    uint TargetFreezeDuration;
    FP TargetShakeIntensity;
    bool OnlyHitOnce;

    asset_ref<StatusEffect> StatusEffect;
    asset_ref<ShakeSettings> SpawnShake;
    asset_ref<ShakeSettings> HitShake;
}
